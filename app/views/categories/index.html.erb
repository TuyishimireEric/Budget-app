<p style="color: green"><%= notice %></p>
<div id="categories">
  <% @categories.each do |category| %>
    <% if category.user == current_user %>
      <%= link_to category_transactions_path(category.id) do %>
        <div class="category">
          <%= image_tag(category.icon) %>
            <h2>
              <%= category.name %>
            </h2>
            <p>
              $ <%= category.transactions.sum(:amount) %>
            </p>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

